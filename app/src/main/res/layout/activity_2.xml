<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity2">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/groceryImage2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_width="5dp"
            app:civ_border_color="@color/colorPrimaryDark" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Bem-Vindo!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="287dp"
            tools:layout_editor_absoluteX="128dp" android:id="@+id/textView" android:textColor="#009688"
            android:textSize="30"/>
    <TextView
            android:text="Ajudaremos com as suas compras!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="368dp"
            tools:layout_editor_absoluteX="46dp" android:id="@+id/textView4" android:textColor="#009688"
            android:textSize="20"/>
    <Button
            android:text="Procurar listas criadas"
            android:layout_width="234dp"
            android:layout_height="54dp" tools:layout_editor_absoluteY="497dp"
            tools:layout_editor_absoluteX="88dp" android:id="@+id/button" android:background="@drawable/roundedbutton"/>
    <Button
            android:text="Criar nova lista"
            android:layout_width="234dp"
            android:layout_height="54dp" tools:layout_editor_absoluteY="570dp"
            tools:layout_editor_absoluteX="88dp" android:id="@+id/button2"
            android:background="@drawable/roundedbutton"/>
</android.support.constraint.ConstraintLayout>